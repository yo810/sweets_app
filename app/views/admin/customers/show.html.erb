<div class="container">
  <div class="col-md-10 mx-auto">
    <h5 class="mt-3 mb-3">
      <span class="px-3">
        <%= @customer.full_name %>さんの会員詳細
      </span>
    </h5>
  </div>

      <div class ="row pb-3 mx-auto">
        <div class="col-md-4">会員ID</div>
        <div class="col-md-8"><%= @customer.id %></div>
      </div>

      <div class="row pb-3 mx-auto">
        <div class="col-md-4">氏名</div>
        <div class="col-md-8"><%= @customer.full_name %></div>
      </div>

      <div class="row pb-3 mx-auto">
        <div class="col-md-4">フリガナ</div>
        <div class="col-md-8"><%= @customer.full_name_kana %></div>
      </div>

      <div class="row pb-3 mx-auto">
        <div class="col-md-4">郵便番号</div>
        <div class="col-md-8"><%= @customer.postal_code %></div>
      </div>

      <div class="row pb-3 mx-auto">
        <div class="col-md-4">住所</div>
        <div class="col-md-8"><%= @customer.address %></div>
      </div>

      <div class="row pb-3 mx-auto">
        <div class="col-md-4">電話番号</div>
        <div class="col-md-8"><%= @customer.telephone_number %></div>
      </div>

      <div class="row pb-3 mx-auto">
        <div class="col-md-4">メールアドレス</div>
        <div class="col-md-8"><%= @customer.email %></div>
      </div>

      <div class="row pb-3 mx-auto">
        <div class="col-md-4">会員ステータス</div>
        <div class="col-md-8">
          <% if @customer.is_deleted == true %>
            <p class="text-secondary">退会済</p>
          <% else %>
            <strong><p class="text-success">有効</p></strong>
          <% end %>
        </div>
      </div>

      <div class="row pb-3 mx-auto">
        <div class="col-md-4"></div>
        <div class="col-md-8">
          <%= link_to "編集する", edit_admin_customer_path(@customer), class: "btn btn-success mr-5 ", type: "button" %>
          <%= link_to "注文履歴一覧を見る", admin_root_path(@customer), class: "btn btn-info", type: "button" %>
        </div>
      </div>

  </div>
</div>