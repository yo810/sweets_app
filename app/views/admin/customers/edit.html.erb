<div class="container">
  <div class="col-md-10 mx-auto">
    <h5 class="mt-3 mb-3">
      <span class="px-3">
        <%= @customer.last_name %>さんの会員情報編集
      </span>
    </h5>
  </div>

  <div class="row pb-2">
    <div class="col-md-4">会員ID</div>
    <div class="col-md-8"><%= @customer.id %></div>
  </div>

  <%= form_with model: @customer, url: admin_customer_path(@customer.id) do |f| %>


      <div class="row pb-2">
        <div class="col-md-2 col-form-label">氏名</div>
        <div class="col-md-3">
          <%= f.text_field :last_name, class: "form-control" %>
        </div>
        <div class="col-md-3">
          <%= f.text_field :first_name, class: "form-control" %>
        </div>
      </div>

      <div class="row pb-2">
        <div class="col-md-2 col-form-label">フリガナ</div>
        <div class="col-md-3">
          <%= f.text_field :last_name_kana, class: "form-control" %>
        </div>
        <div class="col-md-3">
          <%= f.text_field :first_name_kana, class: "form-control" %>
        </div>
      </div>

      <div class="row pb-2">
        <div class="col-md-2 col-form-label">郵便番号</div>
        <div class="col-md-3">
          <%= f.text_field :postal_code, class: "form-control" %>
        </div>
      </div>

      <div class="row pb-2">
        <div class="col-md-2 col-form-label">住所</div>
        <div class="col-md-8">
          <%= f.text_field :address, class: "form-control" %>
        </div>
      </div>

      <div class="row pb-2">
        <div class="col-md-2 col-form-label">電話番号</div>
        <div class="col-md-3">
          <%= f.text_field :telephone_number, class: "form-control" %>
        </div>
      </div>

      <div class="row pb-2">
        <div class="col-md-2 col-form-label">メールアドレス</div>
        <div class="col-md-3">
          <%= f.email_field :email, class: "form-control" %>
        </div>
      </div>

      <div class="row pb-2">
        <div class="col-md-2">会員ステータス</div>
        <div class="col-md-3 col-form-label">
          <%= f.radio_button :is_active, :true, class: "form-check-label" %>
          <%= f.label :is_deleted, "無効" %>
          <%= f.radio_button :is_active, :false, class: "form-check-label" %>
          <%= f.label :is_deleted, "有効" %>
        </div>
      </div>

      <div class="row pb-3">
        <div class="col-md-2"></div>
        <div class="col-md-3">
          <%= f.submit "変更を保存", class: "btn btn-success btn-lg d-block" %>
        </div>
      </div>

  <% end %>
</div>