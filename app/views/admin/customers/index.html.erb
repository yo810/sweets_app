<div class="container">
  <div class="admin-customer pt-5">
    <div class="col-md-9 mx-auto">

      <h4 class="pb-3">会員一覧</h4>

      <table class="table table-hover table-bordered table-condensed">
        <tr>
          <th>会員ID</th>
          <th>氏名</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
        </tr>
        <% @customers.each do |customer| %>
          <tr>
            <td>
              <%= customer.id %>
            </td>
            <td>
              <%= link_to customer.last_name, admin_customer_path(customer), class: "text-dark" %>
            </td>
            <td>
              <%= customer.email %>
            </td>
            <td>
              <% if customer.is_deleted == true %>
                <p>退会済</p>
              <% else %>
                <p>有効</p>
              <% end %>
            </td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>