<div class="container">
  <div class="col-md-10 mx-auto">
    <h5 class="mt-3 mb-3">
      <span class="px-3">
        会員一覧
      </span>
    </h5>
  </div>

      <table class="table table-hover table-bordered table-condensed col-md-8 mx-auto">
        <tr>
          <th>会員ID</th>
          <th>氏名</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
        </tr>
        <% @customers.each do |customer| %>
          <tr>
            <td>
              <%= customer.id %>
            </td>
            <td>
              <%= link_to admin_customer_path(customer), class: "text-dark" do %>
              <%= customer.first_name %><%= customer.last_name %>
              <% end %>
            </td>
            <td>
              <%= customer.email %>
            </td>
            <td>
              <% if customer.is_deleted == true %>
                <strong><p>退会済</p></strong>
              <% else %>
                <strong><p class="text-success">有効</p></strong>
              <% end %>
            </td>
          </tr>
        <% end %>
      </table>

      <div class="row">
        <div class="mx-auto">
          <div class="pagination justify-content-around">
            <%= paginate @customers %>
          </div>
        </div>
      </div>
</div>