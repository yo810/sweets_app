<div class="container">
  <div class="row">
    <div class="mx-auto col-md-8">
      <h5 class="mt-3 mb-3">
        <span class="px-3">
        　注文履歴一覧
        </span>
      </h5>

      <table class="table table-hover table-bordered table-condensed">
        <thead class="thead-light">
          <tr>
            <th class="col-md-2">購入日時</th>
            <th class="col-md-2">購入者</th>
            <th class="col-md-2">注文個数</th>
          </tr>
        </thead>

        <tbody>
        <% @orders.each do |order| %>
          <tr>
            <td>
              <%= link_to admin_order_path(order.id) do %>
                <%= order.created_at.strftime("%Y-%m-%d %H:%M:%S") %>
              <% end %>
            </td>
            <td>
              <%= order.customer.full_name %>
            </td>
            <td>
              <% @order_details = order.order_details %>
              <% @order_details.each do |order_detail| %>
              <% @total += order_detail.amount %>
              <% end %>
              <%= @total_amount %>
              <% @total_amount = 0 %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>

      <div class="row">
        <div class="mx-auto">
          <div class="pagination justify-content-around">
            <%= paginate @orders %>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>
