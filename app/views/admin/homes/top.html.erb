<div class="container">
  <div class="admin-top pt-5">
    <h2 class="pb-3">注文履歴一覧</h2>
    <table>
      <tr>
        <th>購入日時</th>
        <th>購入者</th>
        <th>注文個数</th>
        <th>注文ステータス</th>
      </tr>
      <% @orders.each do |order| %>
        <tr>
          <td>
            <%= order.created_at %>
          </td>
          <td>
            <%= order.customer.full_name %>
          </td>
          <!--注文数量-->
          <td>
            <%= order.status %>
          </td>
        </tr>
      <% end %>
    </table>
  </div>
</div>
