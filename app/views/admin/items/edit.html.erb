<% if @item.errors.any? %>
　<div id="error_explanation">
　  <h2><%= @item.errors.count %> error prohibited this book from being saved:　</h2>
    <ul>
      <% @item.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-md-5 mx-auto">
      <h1 class="mb-5">商品編集</h1>
        <%= form_with model: @item, url: admin_item_path, local: true do |f| %>
          <div class="from_group row pb-3">
            <p class="col-md-5">商品画像</p>
            <%= f.file_field :image, class: 'image col-md-7 p-0' %>
          </div>

          <div class="from_group row pb-3">
            <%= f.label :商品名, class: "col-sm-5 control-label" %>
            <%= f.text_field :name, class: "col-sm-7 form-control-static name" %>
          </div>

          <div class="from_group row pb-3">
            <%= f.label :商品説明, class: "col-sm-5 control-label" %>
            <%= f.text_area :introduction, class: "col-sm-7 control-label introduction" %>
          </div>

          <div class="from_group row pb-3">
            <%= f.label :税抜価格, class: "col-sm-5 control-label" %>
            <%= f.text_field :price, class: "col-sm-6 form-control-static tax_out_price mr-2" %>円
          </div>

          <div class="from_group row pb-3">
            <%= f.label :販売ステータス, class: "col-sm-5 control-label" %>

            <%= f.label :is_active, "販売中", value: :true %>

            <%= f.label :is_active, "販売停止中", value: :false %>
          </div>
          <%= f.submit '変更を保存', class: "btn btn-success btn-lg pull-right d-block mx-auto" %>
        <% end %>
    </div>
  </div>
</div>