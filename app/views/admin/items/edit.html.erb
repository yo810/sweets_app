<% if @item.errors.any? %>
　<div id="error_explanation">
　  <h2><%= @item.errors.count %> error prohibited this book from being saved:　</h2>
    <ul>
      <% @item.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-md-10 mx-auto">
      <h5 class="mt-3 mb-3">
        <span class="px-3">
          商品編集
        </span>
      </h5>
    </div>

    <div class="row mx-auto">
      <%= form_with model: @item, url: admin_item_path, local: true do |f| %>
        <div class="row mb-2">
          <div class="col-4">
            <%= f.label "商品画像", class: "col-form-label" %>
          </div>
          <div class="col-8">
            <%= f.file_field :image, accept: "image/*" %>
          </div>
        </div>

        <div class="row mb-2">
          <div class="col-4">
            <%= f.label :商品名, class: "col-form-label" %>
          </div>
          <div class="col-8">
            <%= f.text_field :name, class: "form-control" %>
          </div>
        </div>

        <div class="row mb-2">
          <div class="col-4">
            <%= f.label :商品説明, class: "col-form-label" %>
          </div>
          <div class="col-8">
            <%= f.text_area :introduction, class: "form-control" %>
          </div>
        </div>

        <div class="row mb-2">
          <div class="col-4">
            <%= f.label :税抜価格, class: "col-form-label" %>
          </div>
          <div class=col-8>
            <%= f.text_field :price, class: "form-control" %>
          </div>
        </div>

        <div class="row mb-2">
          <div class="col-4">
            <%= f.label :販売ステータス, class: "col-form-label" %>
          </div>
          <div class="col-8 col-form-label">
            <%= f.radio_button :is_active, :true, class: "form-check-label" %>
            <%= f.label :is_active, "販売中" %>
            <%= f.radio_button :is_active, :false, class: "form-check-label" %>
            <%= f.label :is_active, "販売停止中" %>
          </div>
        </div>

        <div class="mx-auto mt-5 col-3">
          <%= f.submit '変更を保存', class: "btn btn-success btn-lg d-block" %>
        </div>
      <% end %>
    </div>
  </div>
</div>