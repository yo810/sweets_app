<div class="container">
  <div class="admin-item-index pt-3">
    <div class="col-md-10 mx-auto">
      <h5 class="mt-3 mb-3">
        <span class="px-3">
          商品一覧
        </span>
          <%= link_to new_admin_item_path do %>
          <i class="fa-solid fa-plus offset-10"></i>
          <% end %>
      </h5>


      <table class="table table-hover table-bordered table-condensed">
        <thead class="thead">
          <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th>ステータス</th>
          </tr>
        </thead>

        <% @items.each do |item| %>
        <tr>
          <td class="col-md-1"><%= item.id %></td>
          <td class="text-left col-md-3">
            <%= link_to admin_item_path(item.id), class: "btn-link text-dark" do %>
              <%= item.name %>
            <% end %>
          </td>
          <td class="text-right col-md-1"><%= item.price %></td>
          <td class="text-left col-md-3"><%= item.genre_id %></td>
          <td class="col-md-2">
            <% if item.is_active == true %>
              <p class="text-success">販売中</p>
            <% elsif item.is_active == false %>
              <p class="text-muted">販売停止中</p>
            <% end %>
          </td>
        </tr>
        <% end %>
      </table>

      <div class="row">
        <div class="mx-auto">
          <div class="pagination justify-content-around">
            <%= paginate @items %>
          </div>
        </div>
       </div>
    </div>
  </div>
</div>
