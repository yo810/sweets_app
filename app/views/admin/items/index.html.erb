<div class="container">
  <div class="admin-item-index pt-3">
    <div class="col-md-9 mx-auto">

      <h4 class="pb-3">商品一覧</h4>
      <%= link_to "新規登録", new_admin_item_path, class: "float-right" %>

      <table class="table table-hover table-bordered table-condensed">
        <thead class="thead">
          <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th>ステータス</th>
          </tr>
        </thead>

        <% @items.each do |item| %>
        <tr>
          <td class="col-xs-1"><%= item.id %></td>
          <td class="text-left">
            <%= link_to admin_item_path(item.id), class: "btn-link text-dark" do %>
              <%= item.name %>
            <% end %>
          </td>
          <td class="text-right col-xs-1"><%= item.price %></td>
          <td class="text-left col-xs-3"><%= item.genre_id %></td>
          <td class="col-xs-2">
            <% if item.is_active == true %>
              <p class="text-success">販売中</p>
            <% elsif item.is_active == false %>
              <p class="text-muted">販売停止中</p>
            <% end %>
          </td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>
