
<div class="container">
  <div class="row">
    <div class="col-10 mx-auto">
      <h5 class="mt-3 mb-3">
        <span class="px-3">
          商品新規登録
        </span>
      </h5>
    </div>


    <div class="row mx-auto">
      <%= form_with model: @item, url: admin_items_path do |f| %>
        <div class="row pb-3">
          <div class="col-4">
            <%= f.label :商品画像, class: "col-form-label" %>
          </div>
          <div class="col-8">
            <%= f.file_field :image%>
          </div>
        </div>

        <div class="row pb-3">
          <div class="col-4">
            <%= f.label :商品名, class: "col-form-label" %>
          </div>
          <div class="col-8">
          <%= f.text_field :name, autofocus: true, class: "form-control" %>
          </div>
        </div>

        <div class="row pb-3">
          <div class="col-4">
            <%= f.label :商品説明, class: "col-form-label" %>
          </div>
          <div class="col-8">
            <%= f.text_area :introduction, class: "form-control" %>
          </div>
        </div>

        <div class="row pb-3">
          <div class="col-4">
            <%= f.label :税抜価格, class: "col-control-label" %>
          </div>
          <div class="col-8">
            <%= f.text_field :price, class: "form-control" %>円
          </div>
        </div>

        <div class="row pb-3">
          <div class="col-4">
            <%= f.label :販売ステータス, class: "col-form-label" %>
          </div>
          <div class="col-8">
            <%= f.radio_button :is_active, :true, class: "form-check-label" %>
            <%= f.label :is_active, "販売中" %>
            <%= f.radio_button :is_active, :false, class: "form-check-label" %>
            <%= f.label :is_active, "販売停止中" %>
          </div>
        </div>

        <div class="mx-auto mt-3 col-3">
          <%= f.submit '新規登録', class: "btn btn-success btn-lg d-block" %>
        </div>
      <% end %>
    </div>
  </div>
</div>