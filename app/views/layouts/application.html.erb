<!DOCTYPE html>
<html>
  <head>
    <title>SweetsApp</title>

    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container">
          <span>SweetsApp</span>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
                        aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">

            <% if customer_signed_in? %>
              <li class="customer-name">
                ようこそ、<%= current_customer.last_name %> さん
              </li>
              <li class="ml-4">
                <%= link_to "会員のみなさまへ", customer_rule_path, class: "btn btn-outline-dark" %>
              </li>
              <li class="ml-4">
                <%= link_to "マイページ", customer_customer_path, class: "btn btn-outline-dark" %>
              </li>
              <li class="ml-4">
                <%= link_to "商品一覧", customer_items_path, class: "btn btn-outline-dark" %>
              </li>
              <li class="ml-4">
                <%= link_to "カート", customer_cart_items_path, class: "btn btn-outline-dark" %>
              </li>
              <li class="ml-4 mr-4">
                <%= link_to "ログアウト", destroy_customer_session_path, method: :delete, class: "btn btn-outline-dark" %>
              </li>
            <% elsif admin_signed_in? %>
              <li class="ml-4">
                <%= link_to admin_items_path, class: 'nav-link text-light' do %>
                商品一覧
                <% end %>
              </li>
              <li class="ml-4">
                <%= link_to admin_costomers_path, class: 'nav-link text-light' do %>
                会員一覧
                <% end %>
              </li>
              <li class="ml-4">
                <%= link_to admin_genres_index_path, class: 'nav-link text-light' do %>
                ジャンル一覧
                <% end %>
              </li>
              <li class="ml-4">
                <%= link_to destroy_customer_session_path, method: :delete, class: 'nav-link text-light' do %>
                ログアウト
                <% end %>
              </li>
            <% else %>
              <li class="ml-4">
                <%= link_to public_about_path, class: 'nav-link text-light' do %>
                About
                <% end %>
              </li>
              <li class="ml-4">
                <%= link_to admin_items_path, class: 'nav-link text-light' do %>
                商品一覧
                <% end %>
              </li>
              <li class="ml-4">
                <%= link_to new_admin_item_path, class: 'nav-link text-light' do %>
                新規登録
                <% end %>
              </li>
              <li class="ml-4">
                <%= link_to new_admin_session_path, class: 'nav-link text-light' do %>
              　ログイン
                <% end %>
              </li>
            <% end %>

            </ul>
          </div>
        </div>
      </nav>
    </header>
    <%= yield %>
  </body>
</html>
