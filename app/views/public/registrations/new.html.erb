<div class="contaier">

  <div class="row">
    <div class="mx-auto col-10">
      <h5 class="mt-3 mb-3">
        <span class="px-3">
          新規会員登録
        </span>
      </h5>
    </div>
  </div>


  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <div class="row mb-2">
    <div class="col-2 col-form-label">
　     名前
    </div>
    <div class="col-1">
      <%= f.label :last_name, "(姓)", class: "col-form-label" %>
    </div>
    <div class="col-3">
      <%= f.text_field :last_name, autofocus: true, class: "form-control" %>
    </div>
    <div class="col-1">
      <%= f.label :first_name, "(名)", class: "col-form-label" %>
    </div>
    <div class="col-3">
      <%= f.text_field :first_name, autofocus: true, class: "form-control" %>
    </div>
  </div>

     <div class="row mb-2">
      <div class="col-2 col-form-label">
　      フリガナ
      </div>
      <div class="col-1">
        <%= f.label :last_name_kana, "(セイ)", class: "col-form-label" %>
      </div>
      <div class="col-sm-3">
        <%= f.text_field :last_name_kana, autofocus: true, class: "form-control" %>
      </div>
      <div class="col-1">
        <%= f.label :first_name_kana, "(メイ)", class: "col-form-label" %>
      </div>
      <div class="col-3">
        <%= f.text_field :first_name_kana, autofocus: true, class: "form-control" %>
      </div>
    </div>


    <div class="row mb-2">
      <div class="col-3">
        <%= f.label :email, "メールアドレス", class: "col-form-label" %>
      </div>
      <div class="col-3">
      <%= f.text_field :email, autofocus: true, class: "form-control" %>
      </div>
    </div>

   <div class="row mb-2">
     <div class="col-3">
        <%= f.label :postal_code, "郵便番号（ハイフンなし）", class: "col-form-label" %>
      </div>
      <div class="col-sm-3">
      <%= f.text_field :postal_code, autofocus: true, class: "form-control" %>
      </div>
    </div>

    <div class="row mb-2">
     <div class="col-3">
        <%= f.label :address, "住所",class: "col-form-label" %>
      </div>
      <div class="col-6">
      <%= f.text_field :address, autofocus: true, class: "form-control" %>
      </div>
    </div>

    <div class="row mb-2">
     <div class="col-3">
        <%= f.label :telephone_number, "電話番号（ハイフンなし）",class: "col-form-label" %>
      </div>
      <div class="col-3">
      <%= f.text_field :telephone_number, autofocus: true, class: "form-control" %>
      </div>
    </div>

    <div class="row mb-2">
     <div class="col-3">
        <%= f.label :password, "パスワード",class: "col-form-label" %>
        <% if @minimum_password_length %>
        (<%= @minimum_password_length %> 文字以上)
        <% end %>
      </div>
      <div class="col-3">
        <%= f.password_field :password, class: "form-control" %>
      </div>
    </div>

     <div class="row mb-4">
     <div class="col-3">
        <%= f.label :password_confirmation,  "パスワード（確認用）",class: "col-form-label" %>
      </div>
      <div class="col-3">
        <%= f.password_field :password_confirmation, class: "form-control" %>
      </div>
    </div>

    <div class="col-6 mx-auto ">
      <%= f.submit "新規登録", class: "btn btn-success" %>
    </div>
  <% end %>

    <div class="row">
      <div class="mx-auto col-10">
        <h6 class="mt-3 mb-3">
          <span1 class="px-3">
            既に登録済みの方
          </span1>
        </h6>
        <%=link_to "こちら", new_customer_session_path %>からログインしてください。
      </div>
    </div>
</div>