<div class="container">
  <div class="row">
    <div class="col-md-2">
      <h5>ジャンル検索</h5>
      <p>ケーキ</p>
      <p>焼き菓子</p>
      <p>プリン</p>
      <p>キャンディ</p>
    </div>

    <div class="col-md-9">
      <h2>商品一覧</h2>
      <p>(全<%= @items.all.count %>件)</p>
      <div class="row">
      <% @items.each do |item| %>
      <div class="col-md-3">
        <%= link_to public_item_path(item.id) do %>
        <% if item.image.attached? %>
          <%= image_tag item.image, size: "150x100" %>
        <% else %>
          <%= image_tag 'no_image', size: "150x100" %>
        <% end %>
        <% end %>
        <p>
          <%= link_to public_item_path(item.id), class: "btn-link text-dark" do %>
            <%= item.name %>
          <% end %>
        </p>
        <p><%= item.with_tax_price %> 円</p>
      </div>
      <% end %>
      </div>
    </div>
  </div>
</div>