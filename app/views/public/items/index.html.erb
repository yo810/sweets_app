<div class="container">
  <div class="row mt-3 mb-3">
    <h3>
      商品一覧（全<%= @item_all.count %>件）
    </h3>
  </div>

  <div class="row">
    <% @items.each do |item| %>
      <div class="col-md-3 mb-2">
        <%= link_to public_item_path(item.id) do %>
        <%= image_tag item.get_image, size: "150x100" %>
        <% end %>

        <div class="row mb-2">
          <div class="col-md-8">
            <strong><%= item.name %></strong>
          </div>
        </div>

        <div class="row">
          <div class="col-md-4">
            <strong><%= item.with_tax_price %> 円</strong>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <div class="row">
    <div class="mx-auto">
      <%= paginate @items %>
    </div>
  </div>

</div>