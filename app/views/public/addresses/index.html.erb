<div class="container">
  <div class="row">
    <% if @address.errors.any? %>
　    <div id="error_explanation">
　      <h2><%= @address.errors.count %> error prohibited this book from being saved:　</h2>
        <ul>
          <% @address.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="col-md-12">
      <h4>配送先登録/一覧</h4>
      <%= from_with model: @address do |f| %>
      <div>
        <%=f.label "郵便番号(ハイフンなし)" %>
        <%= f.text_field :postal_code %>
      </div>
      <div>
        <%= f.label "住所" %>
        <%= f.text_area :address %>
      </div>
      <div>
        <%= f.label "宛名" %>
        <%= f.text_field :name %>
        <%= f.submit "新規登録", class: "btn btn-success" %>
      </div>
      <% end %>
    </div>

  </div>
</div>
