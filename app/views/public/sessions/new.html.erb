<div class="container">
  <div class="row">
    <div class="col-md-10 mx-auto">
      <h4 class="mt-3 mb-3">
        <span class="px-3">
          ログイン
        </span>
      </h4>
    </div>
  </div>

  <div class="row">
    <div class="mx-auto col-md-10">
      <h5 class="mt-3 mb-5">
        <span1 class="px-3">
          会員の方はこちらからログイン
        </span1>
      </h5>
    </div>
  </div>

  <div class="offset-2">

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

      <div class="row mx-auto mb-3">
        <%= f.label :email, "メールアドレス",class: "col-2" %>
        <div class="col-md-6">
        <%= f.email_field :email, autofocus: true, class: "form-control" %>
        </div>
      </div>

      <div class="row mx-auto mb-3">
        <%= f.label :password, "パスワード",class: "col-2" %>
        <div class="col-md-6">
        <%= f.password_field :password, class: "form-control" %>
        </div>
      </div>

      <div class="mx-auto col-md-6">
        <%= f.submit "ログイン", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>

    <div class="row">
      <div class="mx-auto col-md-10">
        <h5 class="mt-5 mb-2">
          <span class="px-3">
            会員登録がお済みでない方
          </span>
        </h5>
        <%= link_to "こちら", new_customer_registration_path %> から新規登録を行ってください。
    </div>
</div>
