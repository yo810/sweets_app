<div class="container">
  <div class="mx-auto col-md-10">
      <h4 class="mt-3 mb-3">
        <span1 class="px-3">
          会員情報編集
        </span1>
      </h4>
    </div>
  </div>

  <%= form_with model: @customer, url: public_customer_path(@customer) do |f| %>

    <table class="col-10 public-customer-edit">

      <tr class="row pb-3 px-5">
        <td class="col-md-4">氏名</td>
        <td class="col-md-8">
          <%= f.text_field :last_name, class: "mr-4" %>
          <%= f.text_field :first_name %>
        </td>
      </tr>
      <tr class="row pb-3 px-5">
        <td class="col-md-4">フリガナ</td>
        <td class="col-md-8">
          <%= f.text_field :last_name_kana, class: "mr-4" %>
          <%= f.text_field :first_name_kana %>
        </td>
      </tr>
      <tr class="row pb-3 px-5">
        <td class="col-md-4">郵便番号</td>
        <td class="col-md-8">
          <%= f.text_field :postal_code %>
        </td>
      </tr>
      <tr class="row pb-3 px-5">
        <td class="col-md-4">住所</td>
        <td class="col-md-8">
          <%= f.text_field :address, class: "col-10" %>
        </td>
      </tr>
      <tr class="row pb-3 px-5">
        <td class="col-md-4">電話番号</td>
        <td class="col-md-8">
          <%= f.text_field :telephone_number %>
        </td>
      </tr>
      <tr class="row pb-3 px-5">
        <td class="col-md-4">メールアドレス</td>
        <td class="col-md-8">
          <%= f.email_field :email %>
        </td>
      </tr>

      <tr class="row pb-3 px-5">
        <td class="col-md-4"></td>
        <td class="col-md-8">
          <%= f.submit "編集内容を保存", class: "btn btn-success mr-5" %>
          <%= link_to "退会する", public_customers_unsubscribe_path, class: "btn btn-danger ml-5" %>
        </td>
      </tr>
    </table>
  <% end %>
</div>