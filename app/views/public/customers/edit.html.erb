<div class="container">
  <div class="mx-auto col-md-10">
      <h4 class="mt-3 mb-3">
        <span class="px-3">
          会員情報編集
        </span>
      </h4>
    </div>
  </div>

  <%= form_with model: @customer, url: customer_path(@customer) do |f| %>

    <div class="row col-12 my-2">
      <div class="col-2 col-form-label">
        名前
      </div>
      <div class="col-sm-3">
        <%= f.text_field :last_name, autofocus: true, class: "form-control" %>
      </div>
      <div class="col-sm-3">
        <%= f.text_field :first_name, autofocus: true, class: "form-control" %>
      </div>
    </div>

    <div class="row col-12 my-2">
      <div class="col-2 col-form-label">
        フリガナ
      </div>
      <div class="col-sm-3">
        <%= f.text_field :last_name_kana, autofocus: true, class: "form-control" %>
      </div>
      <div class="col-sm-3">
        <%= f.text_field :first_name_kana, autofocus: true, class: "form-control" %>
      </div>
    </div>

    <div class="row col-12 mb-2">
      <div class="col-2">
        <%= f.label :postal_code, "郵便番号", class: "col-form-label" %>
      </div>
      <div class="col-sm-3">
        <%= f.text_field :postal_code, autofocus: true, class: "form-control" %>
      </div>
    </div>

    <div class="row col-12 mb-2">
      <div class="col-2">
        <%= f.label :address, "住所", class: "col-form-label" %>
      </div>
      <div class="col-sm-6">
        <%= f.text_field :address, autofocus: true, class: "form-control" %>
      </div>
    </div>

    <div class="row col-12 mb-2">
      <div class="col-2">
        <%= f.label :telephone_number, "電話番号", class: "col-form-label" %>
      </div>
      <div class="col-sm-3">
        <%= f.text_field :telephone_number, autofocus: true, class: "form-control" %>
      </div>
    </div>

    <div class="row col-12 mb-2">
      <div class="col-2">
        <%= f.label :email, "メールアドレス", class: "col-form-label" %>
      </div>
      <div class="col-sm-3">
        <%= f.text_field :email, autofocus: true, class: "form-control" %>
      </div>
    </div>

    <div class="row justify-content-evenly">
      <div class="col-2 mt-5 offset-2">
        <%= f.submit "編集内容を保存", class: "btn btn-success" %>
        <% end %>
      </div>
      <div class="col-2 mt-5">
        <%= link_to "退会する", unsubscribe_customers_path, class: "btn btn-danger" %>
      </div>
    </div>

</div>