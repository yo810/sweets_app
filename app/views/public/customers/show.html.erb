<div class="container">
  <div class="row">
    <div class="col-md-10 mx-auto">
      <h5 class="mt-3 mb-3">
        <span1 class="px-3">
          マイページ
        </span1>
      </h5>
    </div>
  </div>

    <div class="row mb-3">
      <div class="col-md-2">
        <h5><strong>登録情報</strong></h5>
      </div>
      <div class="colmd-2">
        <%= link_to "編集する", public_edit_path(@customer), class: "btn btn-success ml-5" %>
      </div>
    </div>

      <div class="row">
        <table class="col-md-8 table table-bordered mt-3">
          <tr>
            <td>氏名</td>
            <td><%= @customer.last_name %> <%= @customer.first_name %></td>
          </tr>

          <tr>
            <td>カナ</td>
            <td><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></td>
          </tr>

          <tr>
            <td>郵便番号</td>
            <td><%= @customer.postal_code %></td>
          </tr>

          <tr>
            <td>住所</td>
            <td><%= @customer.address %></td>
          </tr>
          <tr>
            <td>電話番号</td>
            <td><%= @customer.telephone_number %></td>
          </tr>
          <tr>
            <td>メールアドレス</td>
            <td><%= @customer.email %></td>
          </tr>
        </table>
      </div>

      <div class="row mt-3 mb-3">
        <div class="col-md-2">
          <h5><strong>配送先</strong></h5>
        </div>
        <div class="col-md-2">
        <%= link_to "一覧を見る", public_addresses_path, class: "btn btn-primary" %>
        </div>
      </div>

      <div class="row">
        <div class="col-md-2">
          <h5><strong>注文履歴</strong></h5>
        </div>
        <div class="col-md-2">
          <%= link_to "一覧を見る", public_orders_path, class: "btn btn-primary" %>
        </div>
      </div>

    </div>
</div>